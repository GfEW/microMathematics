<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ListPreference
        app:icon="@drawable/pref_language"
        android:defaultValue="@string/pref_default_language_code"
        android:entries="@array/pref_language_names"
        android:entryValues="@array/pref_language_codes"
        android:key="app_language"
        android:summary="%s"
        android:title="@string/pref_app_language"/>

    <ListPreference
        app:icon="@drawable/pref_theme"
        android:defaultValue="@string/pref_default_theme_code"
        android:entries="@array/pref_theme_names"
        android:entryValues="@array/pref_theme_codes"
        android:key="app_theme"
        android:summary="%s"
        android:title="@string/pref_app_theme"/>

    <ListPreference
        app:icon="@drawable/pref_zoom"
        android:defaultValue="@string/pref_default_zoom_code"
        android:entries="@array/pref_zoom_names"
        android:entryValues="@array/pref_zoom_codes"
        android:key="zoom_mode"
        android:summary="%s"
        android:title="@string/pref_zoom"/>

    <SwitchPreferenceCompat
        app:icon="@drawable/pref_developer"
        app:singleLineTitle="false"
        android:defaultValue="false"
        android:key="developer_mode"
        android:title="@string/pref_developer_mode"/>

    <SwitchPreferenceCompat
        app:icon="@drawable/pref_exit"
        app:singleLineTitle="false"
        android:defaultValue="false"
        android:key="exit_confirm"
        android:title="@string/pref_exit_confirm"/>

</PreferenceScreen>