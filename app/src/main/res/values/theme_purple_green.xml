<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Teal-Deep Orange theme -->
    <style name="BaseThemePurpleGreen" parent="AppBaseThemeLight">
        <!-- generated by Material Palette - materialpalette.com -->
        <item name="colorPrimary">#ccbada</item>
        <item name="colorPrimaryDark">#785a9f</item>
        <item name="colorAccent">#388e3c</item>
        <item name="android:textColor">#47296f</item>
        <item name="android:textColorSecondary">#6e6e6e</item>
        <item name="colorMicroMathIcon">@android:color/white</item>
        <item name="colorMicroMathFloatingIcon">?attr/colorMicroMathIcon</item>
        <item name="drawableAppHeader">@drawable/app_header_purple_green</item>
        <!-- Dialog style -->
        <item name="drawableDialogWindow">@drawable/dialog_window_purple</item>
        <item name="drawableDialogPanel">@drawable/dialog_panel_light</item>
        <item name="colorDialogTitle">#47296f</item>
        <item name="colorDialogDivider">#ccbada</item>
        <item name="colorDialogContent">@android:color/black</item>
        <item name="colorDialogDisabledElement">@color/material_grey_600</item>
        <item name="colorDialogEditText">@android:color/white</item>
        <item name="colorDialogHighlighted">@color/material_grey_300</item>
        <!-- Formula style -->
        <item name="colorFormulaBackground">@android:color/transparent</item>
        <item name="colorFormulaHighlighted">@color/material_grey_300</item>
        <item name="colorFormulaNormal">@color/material_grey_900</item>
        <item name="colorFormulaEmpty">#ffa0e2ef</item>
        <item name="colorFormulaInvalid">#ffff0000</item>
        <item name="colorFormulaSelected">#b2cfb3</item>
        <item name="colorFormulaCalculatedValue">@color/material_grey_600</item>
        <item name="colorFormulaTextFragment">#47296f</item>
        <item name="colorPlotGridLine">#FF787878</item>
        <!-- Other elements -->
        <item name="actionModeBackground">?attr/colorPrimary</item>
    </style>

    <style name="MainThemePurpleGreen" parent="BaseThemePurpleGreen">
        <!-- No settings -->
    </style>

    <style name="SettingsThemePurpleGreen" parent="BaseThemePurpleGreen">
        <!-- For preference activity, de-activate overlay -->
        <item name="windowActionModeOverlay">false</item>
    </style>

</resources>