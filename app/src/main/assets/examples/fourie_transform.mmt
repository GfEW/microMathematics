        <term key="leftTerm" text="N" />
        <term key="rightTerm" text="1" />
      </term>
    </plot_function>
    <text_fragment textStyle="subsubsection" numbering="true">
      <term key="text" text="Equation for the direct transformation" />
    </text_fragment>
    <text_fragment>
      <term key="text" text="Using Fourier transform formula:" />
    </text_fragment>
    <equation>
      <term key="leftTerm" text="ξ" />
      <term key="rightTerm" code="power">
        <term key="leftTerm" text="e" />
        <term key="rightTerm" code="mult">
          <term key="leftTerm" text="-2" />
          <term key="rightTerm" code="mult">
            <term key="leftTerm" text="π" />
            <term key="rightTerm" code="divide_slash">
              <term key="leftTerm" text="i" />
              <term key="rightTerm" text="N" />
            </term>
          </term>
        </term>
      </term>
    </equation>
    <equation inRightOfPrevious="true">
      <term key="leftTerm" code="content:com.mkulesh.micromath.index.C1">
        <term key="argTerm" text="k" />
      </term>
      <term key="rightTerm" code="summation">
        <term key="maxValue" code="minus">
          <term key="leftTerm" text="N" />
          <term key="rightTerm" text="1" />
        </term>
        <term key="index" text="n" />
        <term key="minValue" text="0" />
        <term key="argTerm" code="mult">
          <term key="leftTerm" code="content:com.mkulesh.micromath.index.G">
            <term key="argTerm" text="n" />
          </term>
          <term key="rightTerm" code="power">
            <term key="leftTerm" text="ξ" />
            <term key="rightTerm" code="mult">
              <term key="leftTerm" text="k" />
              <term key="rightTerm" text="n" />
            </term>
          </term>
        </term>
      </term>
    </equation>
    <text_fragment>
      <term key="text" text="Using fast Fourier transform algorithm from Numerical Recipes:" />
    </text_fragment>
    <equation>
      <term key="leftTerm" text="C2" />
      <term key="rightTerm" code="fft">
        <term key="argTerm" text="G" />
      </term>
    </equation>
    <equation>
      <term key="leftTerm" code="content:com.mkulesh.micromath.index.Θ1">
        <term key="argTerm" text="k" />
      </term>
      <term key="rightTerm" code="atan2">
        <term key="argTerm1" code="im">
          <term key="argTerm" code="content:com.mkulesh.micromath.index.C1">
            <term key="argTerm" text="k" />
          </term>
        </term>
        <term key="argTerm2" code="re">
          <term key="argTerm" code="content:com.mkulesh.micromath.index.C1">
            <term key="argTerm" text="k" />
          </term>
        </term>
      </term>
    </equation>
    <equation>
      <term key="leftTerm" code="content:com.mkulesh.micromath.index.Θ2">
        <term key="argTerm" text="k" />
      </term>
      <term key="rightTerm" code="atan2">
        <term key="argTerm1" code="im">
          <term key="argTerm" code="content:com.mkulesh.micromath.index.C2">
            <term key="argTerm" text="k" />
          </term>
        </term>
        <term key="argTerm2" code="re">
          <term key="argTerm" code="content:com.mkulesh.micromath.index.C2">
            <term key="argTerm" text="k" />
          </term>
        </term>
