        <term key="argTerm" code="content:com.mkulesh.micromath.index.G">
          <term key="argTerm" text="k" />
        </term>
      </term>
      <term key="yFunction2" color="#FF00FF21" width="6" lineStyle="dashed" shapeType="none" shapeSize="300" code="im">
        <term key="argTerm" code="content:com.mkulesh.micromath.index.F1">
