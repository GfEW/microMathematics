  <formulaList documentVersion="2" author="Mikhail Kulesh" title="Fourier transform examples" description="The example demonstrates how to calculate direct and inverse Fourier transform of a synthetic signal." textWidth="60" significantDigits="6" scale="0.34938" redefineAllowed="false">
    <equation>
      <term key="leftTerm" text="σ" />
      <term key="rightTerm" text="1.8" />
    </equation>
    <equation inRightOfPrevious="true">
      <term key="leftTerm" text="τ" />
      <term key="rightTerm" text="10" />
    </equation>
    <equation inRightOfPrevious="true">
      <term key="leftTerm" text="α" />
      <term key="rightTerm" text="1" />
    </equation>
    <equation inRightOfPrevious="true">
      <term key="leftTerm" text="N" />
      <term key="rightTerm" text="512" />
    </equation>
    <equation inRightOfPrevious="true">
      <term key="leftTerm" text="k" />
      <term key="rightTerm" code="equidistant_interval">
        <term key="minValue" text="0" />
        <term key="nextValue" text="1" />
        <term key="maxValue" code="minus">
          <term key="leftTerm" text="N" />
          <term key="rightTerm" text="1" />
        </term>
      </term>
    </equation>
    <text_fragment textStyle="subsubsection" numbering="true">
      <term key="text" text="A source signal is generated using a wavelet" />
    </text_fragment>
    <equation>
      <term key="leftTerm" text="g(t)" />
      <term key="rightTerm" code="mult">
        <term key="leftTerm" code="power">
          <term key="leftTerm" text="e" />
          <term key="rightTerm" code="mult">
            <term key="leftTerm" text="-2i" />
            <term key="rightTerm" code="mult">
              <term key="leftTerm" text="π" />
              <term key="rightTerm" text="t" />
            </term>
          </term>
        </term>
        <term key="rightTerm" code="power">
          <term key="leftTerm" text="e" />
          <term key="rightTerm" code="divide_slash">
            <term key="leftTerm" code="mult">
              <term key="leftTerm" text="-1" />
              <term key="rightTerm" code="power">
                <term key="leftTerm" text="t" />
                <term key="rightTerm" text="2" />
              </term>
            </term>
            <term key="rightTerm" code="mult">
              <term key="leftTerm" text="2" />
              <term key="rightTerm" code="power">
                <term key="leftTerm" text="σ" />
                <term key="rightTerm" text="2" />
              </term>
            </term>
          </term>
        </term>
      </term>
    </equation>
    <equation inRightOfPrevious="true">
      <term key="leftTerm" code="content:com.mkulesh.micromath.index.G">
        <term key="argTerm" text="k" />
      </term>
      <term key="rightTerm" code="mult">
        <term key="leftTerm" code="divide">
          <term key="leftTerm" text="1" />
          <term key="rightTerm" text="α" />
        </term>
        <term key="rightTerm" code="content:com.mkulesh.micromath.link.g">
          <term key="argTerm" code="divide">
            <term key="leftTerm" code="minus">
              <term key="leftTerm" text="τ" />
              <term key="rightTerm" code="divide_slash">
                <term key="leftTerm" code="mult">
                  <term key="leftTerm" text="20" />
                  <term key="rightTerm" text="k" />
                </term>
                <term key="rightTerm" code="minus">
                  <term key="leftTerm" text="N" />
                  <term key="rightTerm" text="1" />
                </term>
              </term>
            </term>
            <term key="rightTerm" text="α" />
          </term>
        </term>
      </term>
    </equation>
